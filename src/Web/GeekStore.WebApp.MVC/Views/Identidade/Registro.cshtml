@model GeekStore.WebApp.MVC.Models.UsuarioRegistroVM

@{
    ViewData["Title"] = "Registro";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-6">
        <section>
            <form method="post">
                <h4>Registre-se e comece a comprar hoje mesmo</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span class="text-danger" asp-validation-for="Senha"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SenhaConfirmacao"></label>
                    <input asp-for="SenhaConfirmacao" class="form-control" />
                    <span class="text-danger" asp-validation-for="SenhaConfirmacao"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Enviar</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
