@model GeekStore.WebApp.MVC.Models.UsuarioLoginVM

@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-5">
        <section>
            <form method="post">
                <h4>Seja bem vindo e boas compras</h4>
                <hr />
                
                <vc:summary></vc:summary>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span class="text-danger" asp-validation-for="Senha"></span>
                </div>
               
                <div class="form-group">
                    <button class="btn btn-primary">Entrar</button>
                </div>
            </form>
            <div class="form-group">
                <p>
                    <a asp-action="Registro" asp-controller="Identidade">Criar uma conta</a>
                </p>
            </div>
        </section>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}